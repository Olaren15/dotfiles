let mapleader = " "

" Search
set nohlsearch
set incsearch
set ignorecase

" line numbers / scrolling
set number
set relativenumber
set scrolloff=8

" indenting
set autoindent
set expandtab
set tabstop=4
set shiftwidth=4

" Others
set showmode
set list

" Scroll faaaaast
nnoremap <C-k> <C-u>
nnoremap <C-j> <C-d>

" Faster access to system clipboard
nnoremap <leader>y "+y
nnoremap <leader>p "+p

