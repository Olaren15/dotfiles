### Vars
set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $term foot
set $browser librewolf

set $locker "swaylock -f -c 000000"

# Inputs
input type:keyboard {
    xkb_layout ca
}

input type:pointer {
    accel_profile flat
}

# Workspaces
set $ws1 1: Browser
set $ws2 2: Terminal
set $ws3 3: Misc
set $ws4 4: Games
set $ws5 5: Mail
set $ws6 6: Chat
set $ws7 7: Misc
set $ws8 8: Misc
set $ws9 9: Music
set $ws10 10: Misc

include ./hosts/$(hostname).conf
include ./config.d/*
# Required for systemd stuff
include /etc/sway/config.d/*

workspace $ws1
